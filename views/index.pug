extends layout
	
block content
	include navbar

	//- -for (let i = 0; i < users.length; i++)
	//- 	li= users[i].name
	.container
		h1= title
		-if(name)
			h1 Welcome, #{name}
		.col-sm-6.col-sm-offset-3.band-image.text-center
			h3 #{band.title}
			img(src=`/images/${band.imageUrl}`)
			a(href=`/vote/up/${band.id}`)
				button(class="btn btn-success" type="submit") Rocks!
			a(href=`/vote/down/${band.id}`)
				button(class="btn btn-danger" type="submit") Sucks!
		
			

		
		

